{
  "name": "hufghani-website",
  "version": "1.0.0",
  "private": true,
  "description": "hufghani-website",
  "author": "Hamza Ghani",
  "keywords": [
    "gatsby"
  ],
  "scripts": {
    "develop": "gatsby develop",
    "start": "gatsby develop",
    "build": "gatsby build",
    "serve": "gatsby serve",
    "clean": "gatsby clean",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ignore-path .gitignore --ext .ts,.tsx,.js",
    "prepare": "husky install",
    "test": "jest --coverage --testResultsProcessor jest-sonar-reporter"
  },
  "dependencies": {
    "@chakra-ui/gatsby-plugin": "^2.0.4",
    "@chakra-ui/icons": "^1.1.7",
    "@chakra-ui/react": "^1.8.8",
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "@mdx-js/mdx": "^1.6.22",
    "@mdx-js/react": "^1.6.22",
    "@nivo/calendar": "^0.74.0",
    "@nivo/core": "^0.74.0",
    "axios": "^0.26.1",
    "date-fns": "^2.28.0",
    "framer-motion": "^6.2.8",
    "gatsby": "^4.9.0",
    "gatsby-plugin-brotli": "^2.1.0",
    "gatsby-plugin-image": "^2.11.1",
    "gatsby-plugin-manifest": "^4.12.1",
    "gatsby-plugin-mdx": "^3.9.0",
    "gatsby-plugin-minify-html": "^1.0.4",
    "gatsby-plugin-react-helmet": "^5.12.1",
    "gatsby-plugin-robots-txt": "^1.7.0",
    "gatsby-plugin-sharp": "^4.11.1",
    "gatsby-source-filesystem": "^4.9.0",
    "gatsby-source-graphcms": "2.7.0-next.4",
    "gatsby-transformer-sharp": "^4.11.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet": "^6.1.0",
    "react-icons": "^4.3.1",
    "react-seo-component": "^2.0.2",
    "serverless": "^3.7.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@loadable/component": "^5.15.2",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^12.1.5",
    "@types/jest": "^27.4.1",
    "@types/loadable__component": "^5.13.4",
    "@types/node": "^17.0.23",
    "@types/mdx-js__react": "^1.5.5",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.14",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.42.1",
    "babel-jest": "^27.5.1",
    "babel-preset-gatsby": "^2.6.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-prettier": "^4.0.0",
    "fullstack-serverless": "^0.8.0",
    "gatsby-plugin-sitemap": "^5.12.1",
    "gatsby-plugin-webpack-bundle-analyser-v2": "^1.1.27",
    "husky": "^7.0.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.5.1",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": ">=12.3.7",
    "prettier": "^2.6.2",
    "typescript": "^4.6.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended",
      "prettier/@typescript-eslint"
    ],
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "node": true
    },
    "rules": {
      "quotes": "off",
      "@typescript-eslint/ban-ts-comment": "off",
      "@typescript-eslint/quotes": [
        2,
        "backtick",
        {
          "avoidEscape": true
        }
      ],
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "prettier/prettier": [
        "error",
        {
          "trailingComma": "es5",
          "semi": false,
          "singleQuote": true,
          "printWidth": 120
        }
      ]
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "printWidth": 120,
    "arrowParens": "avoid",
    "proseWrap": "always"
  },
  "lint-staged": {
    "*.{ts,tsx,js}": "eslint --cache --fix"
  },
  "hooks": {
    "commit-msg": "commitlint -E $1"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    ">0.1%",
    "not IE 11",
    "not IE_Mob 11"
  ],
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "transform": {
      "^.+\\.[jt]sx?$": "<rootDir>/jest-preprocess.js"
    },
    "moduleNameMapper": {
      ".+\\.(css|styl|less|sass|scss)$": "identity-obj-proxy",
      ".+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/file-mock.js",
      "^gatsby-page-utils/(.*)$": "gatsby-page-utils/dist/$1",
      "^gatsby-core-utils/(.*)$": "gatsby-core-utils/dist/$1",
      "^gatsby-plugin-utils/(.*)$": [
        "gatsby-plugin-utils/dist/$1",
        "gatsby-plugin-utils/$1"
      ]
    },
    "testPathIgnorePatterns": [
      "node_modules",
      ".cache",
      "public",
      "e2e-tests"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(gatsby)/)"
    ],
    "globals": {
      "__PATH_PREFIX__": ""
    },
    "testURL": "http://localhost",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "setupFiles": [
      "<rootDir>/loadershim.js"
    ]
  },
  "jestSonar": {
    "reportPath": "reports",
    "reportFile": "test-report.xml",
    "indent": 4
  }
}
